<SelectButton@ToggleButton>:
	font_size: 12
	size_hint: (.95, .95)
	color: 1, 1, 1, 1
	background_color: (.3, .3, .3, 1) if self.state == 'normal' else (.22, .71, .91, 1)
	background_normal: ""
	background_down: ""

<SwitchButton@Switch>:

<VariableControl@Slider>
	orientation: 'vertical'
	value_track: True
	value_track_color: [.22, .71, .91, 1]
